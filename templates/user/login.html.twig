{% extends 'base.html.twig' %}

{% block title %}{{titulo}}{% endblock %}

{% block body %}
{% include "componentsHtml/nav.html.twig" %}
<body>

    <section class="page-section" id="login">
        <div class="container mt-5">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">{{titulo}}</h2>
            </div>

            {% for message in app.session.flashBag.get('msg') %}

                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{message}}
                </div>

            {% endfor %}

            <div class="row mt-4">
                <div class="col-md-3">

                </div>
                <div class="col-md-6">

                    {% if error %}
                        <div> {{ error.messageKey|trans(error.messageData, 'login') }}</div>
                    {% endif %}

                    <form action="{{ path('login') }}" method="post">
                        <label for="username">Usuario: </label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">

                        <label for="password">Contrase√±a: </label>
                        <input type="password" class="form-control" id="password" name="_password">


                        <div class="row text-center">
                            <div class="col-12">
                                <input type="hidden" name="_target_path" value="{{ path('home') }}">

                                <button class="btn btn-dark mt-4" type="submit">Acceder</button>
                            </div>
                        </div>



                    </form>
                </div>
                <div class="col-md-3">

                </div>
            </div>
        </div>
    </section>
</body>
{% endblock %}
